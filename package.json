{
    "name": "frothers-webpage",
    "version": "1.0.0",
    "description": "Hugo + Typescript + ForrestIo project for website",
    "main": "dist/main.js",
    "source": "assets/index.ts",
    "scripts": {
        "start": "run-p start:**",
        "start:hugo": "hugo -d ./dist -vw",
        "start:tina": "npx tinacms dev",
        "start:webpack": "webpack serve --mode development --config webpack.dev.js --hot",
        "preview": "cross-env PORT=8080 run-p preview:**",
        "preview:hugo": "hugo -d ./dist -s site -vw -D -F ",
        "preview:webpack": "webpack serve --mode development --config webpack.dev.js --host 0.0.0.0 --public",
        "build": "yarn run build:webpack && yarn run build:tina && yarn run build:hugo",
        "build:tina": "yarn tinacms build",
        "build:preview": "yarn run build:webpack && yarn run build:hugo:preview",
        "build:hugo": "hugo -d ./dist -v -b $URL",
        "build:hugo:preview": "yarn run build:hugo -- -D -F",
        "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frothers/Frothers-FC.git"
    },
    "author": "Chris Chester",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/frothers/Frothers-FC/issues"
    },
    "homepage": "https://github.com/frothers/Frothers-FC#readme",
    "devDependencies": {
        "@types/chart.js": "^2.9.37",
        "@types/lodash": "4.14.194",
        "assets-webpack-plugin": "^7.1.1",
        "axios": "^1.4.0",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^11.0.0",
        "cross-env": "7.0.3",
        "css-minimizer-webpack-plugin": "^5.0.0",
        "html-webpack-plugin": "5.5.1",
        "lodash": "4.17.21",
        "mini-css-extract-plugin": "2.7.6",
        "npm-run-all": "^4.1.5",
        "optimize-css-assets-webpack-plugin": "^6.0.1",
        "source-map-loader": "4.0.1",
        "ts-loader": "^9.4.3",
        "tslint": "^6.1.3",
        "typescript": "5.0.4",
        "webpack": "^5.84.0",
        "webpack-cli": "^5.1.1",
        "webpack-dev-server": "^4.15.0",
        "webpack-merge": "^5.9.0"
    },
    "hugo-bin": {
        "buildTags": "extended"
    },
    "dependencies": {
        "@tinacms/cli": "1.5.14",
        "@types/jest": "29.5.1",
        "@types/node": "20.2.4",
        "@types/react": "18.2.7",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "tinacms": "1.5.6",
        "victory": "36.6.10"
    }
}
